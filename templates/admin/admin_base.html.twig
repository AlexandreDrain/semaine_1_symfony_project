<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %} 
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <link rel="stylesheet" href="../assets/css/style.css">
        {% endblock %}
        {% block stylesheetsDataTable %} 
            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
        {% endblock %}
    </head>
    <body>
        {% include "admin/navigation/navbar.html.twig" %}

        <div class="d-flex flex-raw">
            <div class="col-md-2" style="margin-top: 200px;">
                <div class="d-flex flex-column" style="border-right: 1px solid black;border-left: 1px solid black">

                    <a href="{{ path('admin_category') }}" class="admin_link text-center mt-1">Categorie</a>
                    <a href="{{ path('admin_product') }}" class="admin_link text-center mt-1">Produits</a>
                    <a href="{{ path('admin_article') }}" class="admin_link text-center mt-1">Articles</a>
                    <a href="{{ path('admin_slider') }}" class="admin_link text-center mt-1">Slider</a>
                    <a href="{{ path('admin_contact') }}" class="admin_link text-center mt-1">Contacts</a>
                    <a href="{{ path('admin_receivedMessages') }}" class="admin_link text-center mt-1">Nos messages</a>
                    <a href="{{ path('admin_quiSommesNous') }}" class="admin_link text-center mt-1">Qui sommes nous</a>

                    
                    <a href="{{ path('admin') }}" class="admin_link text-center mt-1">Retourner Ã  l'administration</a>
                </div>
            </div>
            <div class="ml-auto mr-auto">
                {% block body %}{% endblock %}
            </div>
        </div>
        
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
            <script src="../assets/js/index.js"></script>
        {% endblock %}

        {% block javascriptsDataTable %}
            
            <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>  
            <script>

                $(document).ready( function () {
                    $('#table_id').DataTable();
                } );

            </script>  
        {% endblock %}
    </body>
</html>
