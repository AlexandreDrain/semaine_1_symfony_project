{% extends 'admin/admin_base.html.twig' %}

{% block title %}Administration des articles{% endblock %}

{% block body %}
<h1 class="text-center mt-5 mb-5">Administration des articles</h2>

    <table id="table_id" class="display">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
        </thead>
        <tbody>
            {% for category in categories %}
               <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td class="d-flex">
                        <a href="{{ path('admin_category_modify', {'id' : category.id }) }}" class="btn btn-outline-warning">Modifier</a>
                        <a href="{{ path('admin_category_delete', {'id' : category.id }) }}" class="btn btn-outline-danger">Supprimer</a>
                    </td>
                </tr> 
            {% endfor %}
            
        </tbody>
    </table>

    <a href="{{ path('admin_category_create') }}" class="btn btn-outline-mer">Cr√©er un nouvel article</a>

{% endblock %}