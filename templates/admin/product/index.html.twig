{% extends 'admin/admin_base.html.twig' %}

{% block title %}Administration des produits{% endblock %}

{% block body %}
<h1 class="text-center mt-5 mb-5">Administration des produits</h2>

    <table id="table_id" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Description partielle</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>Lien de l'image</th>
                <th>Le alt de l'image</th>
                <th>Modification</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.title }}</td>
                    <td>{{ product.description|striptags|slice(0, 10)|raw }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.categories }}</td>
                    <td>{{ product.image }}</td>
                    <td>{{ product.alt }}</td>
                    <td class="d-flex">
                        <a href="{{ path('admin_product_modify', {'id' : product.id }) }}" class="btn btn-outline-warning">Modifier</a>
                        <a href="{{ path('admin_product_delete', {'id' : product.id }) }}" class="btn btn-outline-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>

    <a href="{{ path('admin_product_create') }}" class="btn btn-outline-mer">Cr√©er un nouveau produit</a>


{% endblock %}