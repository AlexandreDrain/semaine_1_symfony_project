{% extends 'admin/admin_base.html.twig' %}

{% block title %}Administration des sliders{% endblock %}

{% block body %}
<h1 class="text-center mt-5 mb-5">Administration des sliders</h2>

    <table id="table_id" class="display">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de l'image</th>
                <th>Lien de l'image</th>
                <th>Le alt de l'image</th>
                <th>Modification</th>
            </tr>
        </thead>
        <tbody>
            {% for slider in sliders %}
                <tr>
                    <td>{{ slider.id }}</td>
                    <td>{{ slider.nameImage }}</td>
                    <td>{{ slider.srcImage }}</td>
                    <td>{{ slider.altImage }}</td>
                    <td class="d-flex">
                        <a href="{{ path('admin_slider_modify', {'id' : slider.id }) }}" class="btn btn-outline-warning">Modifier</a>
                        <a href="{{ path('admin_slider_delete', {'id' : slider.id }) }}" class="btn btn-outline-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>

    <a href="{{ path('admin_slider_create') }}" class="btn btn-outline-mer">Cr√©er une nouvelle image du slider</a>

{% endblock %}