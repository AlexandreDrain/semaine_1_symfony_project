{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="../assets/css/style.css">
{% endblock %}

{% block body %}
<div class="container-fluid mt-5">

    <h2 class="text-center">Articles</h2>

    <div class="d-flex justify-content-around mt-5 mb-5">
        <div class="card ombre d-flex flex-column align-items-center">
            <div class="card-header">
                {{ article.name }}
            </div>
            <div class="card-body d-flex flex-column align-items-center">
                <img src="../{{ article.srcImage }}" class="card-img-top" alt="{{ article.altImage }}">
                <p class="card-text">{{ article.description }}</p>
                <a href="{{ path("article") }}" class="btn btn-outline-mer">retour au articles</a>
            </div>
        </div>
    </div>

    <hr>

    <h2 class="text-center">Commentaires relatif au produit</h2>

    <div class="ombre container p-3 mt-5">
        <form action="" method="post">
            <div class="form-group">
                <label for="userName">User name</label>
                <input type="text" class="form-control" id="userName" aria-describedby="emailHelp" name="userName">
                <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
            </div>
            <div class="form-group">
                <label for="userCommentaire">Le commentaire</label>
                <textarea name="userCommentaire" id="userCommentaire" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <div class="m-5">
        {% for commentaire in commentaires %}
        <div class="d-flex justify-content-around">
            <div class="card ombre" style="width: 50rem;">
                <div class="card-body">
                    <p class="card-text"><U>Username</U> : {{ commentaire.userName }}</p>
                    <p class="card-text">{{ commentaire.userCommentaire }}</p>
                    <p class="card-text"><U>Published at</U> : {{ commentaire.publishedAt|date('Y-m-d') }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

</div>
{% endblock %}