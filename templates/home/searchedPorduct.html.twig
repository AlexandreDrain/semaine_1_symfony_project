{% extends 'base.html.twig' %}

{% block title %}show product!{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="../assets/css/style.css">
{% endblock %}


{% block body %}
<div class="container-fluid mt-5">

    <h2 class="text-center">Produit</h2>

    <div class="d-flex justify-content-center">
        <div class="m-5">
            <h3>Le produit recherché :</h3>
            <div class="d-flex justify-content-around">

                {% for searchedProduit in searchedProduits %}

                    <div class="card ombre" style="width: 18rem;">
                        <img src="../{{ searchedProduit.image }}" class="card-img-top" alt="{{ searchedProduit.alt }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ searchedProduit.title }} </h5>
                            <p class="card-text">{{ searchedProduit.description }}</p>
                            <p class="card-text">{{ searchedProduit.price }}</p>
                            <p class="card-text">{{ searchedProduit.categories }}</p>
                            <a href="{{ path('home') }}" class="btn btn-outline-mer">Retour à l'acceuil</a>
                        </div>
                    </div>

                {% else %}

                    <em class="mt-5">Il n'y a pas de produit portant ce nom, désolé</em>

                {% endfor %}

            </div>
        </div>

    </div>
</div>

{% endblock %}